{% extends '@OctopusPress/base.html.twig' %}
{% block header %}{% endblock %}
{% block body %}
    <div class="w-screen mx-auto my-2 px-8">
        <div class="isolate pt-2 px-4">
            {{ widget('breadcrumb', {template: 'summer/breadcrumb.html.twig'}) }}
        </div>
        <div class="flex">
            <div class="flex-1 px-4 overflow-hidden">
                <div class="flex my-2 flex-row justify-start items-center">
                    <button id="convert" type="button" class="bg-primary  text-white rounded-md px-3 py-1 text-xl font-bold" aria-label="转换JSON">转换</button>
                    <button id="copy" type="button" class="bg-primary mx-2 text-white rounded-md px-3 py-1 text-xl font-bold" aria-label="复制结果">复制</button>
                    <label class="dark:text-slate-300">
                        <input id="inlineType" class="text-primary bg-slate-300 dark:bg-slate-700 border-transparent focus:border-transparent focus:bg-slate-200 focus:ring-2 focus:ring-offset-2 focus:ring-primary" type="checkbox" /> 内联类型
                    </label>
                    <label class="mx-2 dark:text-slate-300">
                        <input id="omitEmpty" class="text-primary bg-slate-300 dark:bg-slate-700 border-transparent focus:border-transparent focus:bg-slate-200 focus:ring-2 focus:ring-offset-2 focus:ring-primary" type="checkbox" /> 省略空
                    </label>
                    <label class="dark:text-slate-300">
                        <input id="autoConvert" checked class="text-primary bg-slate-300 dark:bg-slate-700 border-transparent focus:border-transparent focus:bg-slate-200 focus:ring-2 focus:ring-offset-2 focus:ring-primary" type="checkbox" /> 自动转换
                    </label>
                </div>
                <div class="flex items-start overflow-hidden">
                    <div class="flex-1" id="inputContainer">
                        <label>
                            <textarea id="inputJson" class="h-[calc(100vh-10.75rem)] w-full rounded-md bg-slate-200 dark:bg-slate-800 dark:text-slate-300 border-transparent focus:bg-white focus:ring-0 focus:border-primary focus:dark:bg-slate-900/80" placeholder="输入json,双击切换视图."></textarea>
                        </label>
                    </div>
                    <div class="flex-1 hidden" id="outputContainer">
                        <div class="h-[calc(100vh-10.75rem)] w-full" id="outputStruct">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
<footer class="p-6 bg-white dark:bg-slate-800">
    <div class="mx-auto max-w-screen-xl text-center">
        <div class="text-sm text-gray-500 sm:text-center dark:text-gray-400">
            {% set beian = theme_mod('beian') %}
            <p>© {{ now|date('Y')}} Powered By <a target="_blank" href="https://octopuspress.dev" class="hover:underline">OctopusPress™</a>. {% if beian %}<a href="https://beian.miit.gov.cn/#/Integrated/index" target="_blank" rel="nofollow">{{ beian }}</a>{% endif %}</p>
        </div>
    </div>
</footer>
{% endblock %}
{% block script %}
    <script type="text/javascript" src="{{ asset('js/prismjs.js', 'theme') }}"></script>
    <script type="text/javascript" src="{{ asset('js/json-to-go.js', 'theme') }}"></script>
{% endblock %}
